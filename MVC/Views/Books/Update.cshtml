@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Update";
}
@model MVC.Models.BookModel

<div>
    <form method="post" action="/Books/Edit">
        <input type="hidden" name="Id" value="@Model.Id" />
        <table>
            <tr>
                <td>
                    @Localizer["Name"]:
                </td>
                <td>
                    <input type="text" name="Name" value="@Model.Name" />
                </td>
            </tr>
            <tr>
                <td>
                    @Localizer["Year"]:
                </td>
                <td>
                    <input type="number" name="Year" value="@Model.Year" />
                </td>
            </tr>
            <tr>
                <td>
                    @Localizer["Amount"]:
                </td>
                <td>
                    <input type="number" name="Amount" value="@Model.Amount" />
                </td>
            </tr>
            <tr>
                <td>
                    @Localizer["Tags"]:
                </td>
                <td>
                    @for (int i = 0; i < Model.Tags.Count(); i++)
                    {
                    @Html.HiddenFor(m => Model.Tags[i].Id)
                    @Html.HiddenFor(m => Model.Tags[i].Name)
                    @Html.CheckBoxFor(x => Model.Tags[i].Checked)
                    <span>@Model.Tags[i].Name</span><br />
                    }
                </td>
            </tr>
            <tr>
                <td rowspan="2">
                    <button type="submit">@Localizer["Update"]</button>
                </td>
            </tr>
        </table>
    </form>

</div>

